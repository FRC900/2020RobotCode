<?xml version="1.0"?>
<!--

  Simulate a differential drive robot with the teb_local_planner in stage:
  - stage
  - move_base
  - (static map and map server and amcl) or gmapping
  - rviz view
 -->
<launch>

	<arg name="static_map" default="True"/>

	<!--  ************** Global Parameters ***************  -->
	<param name="/use_sim_time" value="true"/>

	<!--  ************** Stage Simulator ***************  -->
	<node pkg="stage_ros" type="stageros" name="stageros" args="$(find controller_node)/stage/2020FRC_robot.world">
		<remap from="base_scan" to="scan"/>
	</node>
</launch>
